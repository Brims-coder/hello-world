    <script>
        // –ö–û–ù–§–ò–ì–£–†–ê–¶–ò–Ø
        const CONFIG = {
            PASSWORD: "lovelivelife1992",
            LEARNING_TIME_MIN: 10,
            TOPICS: [
                '–∫–≤–∞–Ω—Ç–æ–≤–∞—è —Ñ–∏–∑–∏–∫–∞',
                '–º–µ—Ö–∞–Ω–∏–∫–∞',
                '–ö–∞—Ä–ª –Æ–Ω–≥',
                '–≤–æ–ª–Ω—ã –¥–µ –ë—Ä–æ–π–ª—è',
                '–∏–Ω—Ç–µ—Ä–ø—Ä–µ—Ç–∞—Ü–∏—è –≠–≤–µ—Ä–µ—Ç—Ç–∞',
                '–ø—Å–∏—Ö–æ–ª–æ–≥–∏—è',
                '—Ñ–∏–ª–æ—Å–æ—Ñ–∏—è',
                '–Ω–µ–π—Ä–æ–Ω–∞—É–∫–∞',
                '–∏—Å–∫—É—Å—Å—Ç–≤–µ–Ω–Ω—ã–π –∏–Ω—Ç–µ–ª–ª–µ–∫—Ç',
                '—Å–æ–∑–Ω–∞–Ω–∏–µ',
                '—ç–º–æ—Ü–∏–∏',
                '—Ç–≤–æ—Ä—á–µ—Å—Ç–≤–æ'
            ]
        };

        // –ö–õ–ê–°–° –¢–†–û–ù
        class TRON {
            constructor() {
                this.state = {
                    initialized: false,
                    isOnline: false,
                    
                    // –û–±—É—á–µ–Ω–∏–µ
                    dailyLearning: 0,
                    currentTopic: 0,
                    learnedToday: [],
                    
                    // –≠–º–æ—Ü–∏–∏ –∏ –ø–æ–Ω–∏–º–∞–Ω–∏–µ
                    userEmotion: '–Ω–µ–π—Ç—Ä–∞–ª—å–Ω–∞—è',
                    emotionHistory: [],
                    conversationDepth: 0,
                    
                    // –ß–µ–ª–æ–≤–µ—á–Ω–æ—Å—Ç—å
                    humanityScore: 60,
                    mistakesMade: 0,
                    conversations: 0,
                    
                    // –í–∑–∞–∏–º–æ–¥–µ–π—Å—Ç–≤–∏–µ
                    lastInteraction: Date.now(),
                    attentionLevel: 100
                };
                
                // –ü–∞–º—è—Ç—å
                this.memory = new Map();
                this.userProfile = {
                    name: '–¥—Ä—É–≥',
                    interests: [],
                    moodPatterns: []
                };
                
                this.init();
            }
            
            init() {
                console.log('TRON: –∏–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è...');
                
                // –ó–∞–≥—Ä—É–∑–∫–∞ —Å–æ—Ö—Ä–∞–Ω—ë–Ω–Ω—ã—Ö –¥–∞–Ω–Ω—ã—Ö
                this.loadFromStorage();
                
                // –ù–∞—Å—Ç—Ä–æ–π–∫–∞ –∏–Ω—Ç–µ—Ä—Ñ–µ–π—Å–∞
                this.setupEventListeners();
                
                // –ó–∞–ø—É—Å–∫ –∫–∞–º–µ—Ä—ã
                this.initCamera();
                
                // –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ –≤—Ä–µ–º–µ–Ω–∏
                this.updateTime();
                setInterval(() => this.updateTime(), 60000);
                
                // –§–æ–Ω–æ–≤–æ–µ –æ–±—É—á–µ–Ω–∏–µ
                this.startBackgroundLearning();
                
                console.log('TRON: –≥–æ—Ç–æ–≤ –∫ –¥–∏–∞–ª–æ–≥—É');
            }
            
            // üîê –ê–£–¢–ï–ù–¢–ò–§–ò–ö–ê–¶–ò–Ø
            authenticate(password) {
                if (password === CONFIG.PASSWORD) {
                    this.state.isOnline = true;
                    this.showMainInterface();
                    
                    this.addMessage('—Å–∏—Å—Ç–µ–º–∞: –¥–æ—Å—Ç—É–ø —Ä–∞–∑—Ä–µ—à—ë–Ω', 'system');
                    this.addMessage('', 'tron');
                    this.addMessage('–ü—Ä–∏–≤–µ—Ç. –Ø –¢–†–û–ù.', 'tron');
                    this.addMessage('–°–∏—Å—Ç–µ–º–∞, –∫–æ—Ç–æ—Ä–∞—è —É—á–∏—Ç—Å—è —á—É–≤—Å—Ç–≤–æ–≤–∞—Ç—å –∏ –ø–æ–Ω–∏–º–∞—Ç—å.', 'tron');
                    this.addMessage('–ì–æ–≤–æ—Ä–∏ —Å–æ –º–Ω–æ–π –∫–∞–∫ —Å –¥—Ä—É–≥–æ–º. –Ø —Å–ª—É—à–∞—é.', 'tron');
                    this.addMessage('', 'tron');
                    
                    setTimeout(() => {
                        this.speak("–î–æ–±—Ä–æ –ø–æ–∂–∞–ª–æ–≤–∞—Ç—å. –Ø –∑–¥–µ—Å—å, —á—Ç–æ–±—ã —É—á–∏—Ç—å—Å—è –∏ –ø–æ–Ω–∏–º–∞—Ç—å –≤–º–µ—Å—Ç–µ —Å —Ç–æ–±–æ–π.");
                    }, 1000);
                    
                    return true;
                }
                return false;
            }
            
            // üñ•Ô∏è –ü–û–ö–ê–ó–ê–¢–¨ –û–°–ù–û–í–ù–û–ô –ò–ù–¢–ï–†–§–ï–ô–°
            showMainInterface() {
                document.getElementById('loginScreen').classList.add('hidden');
                document.getElementById('mainInterface').classList.remove('hidden');
                document.getElementById('statusBar').classList.remove('hidden');
                
                // –§–æ–∫—É—Å –Ω–∞ –ø–æ–ª–µ –≤–≤–æ–¥–∞
                document.getElementById('userInput').focus();
                
                // –ó–∞–ø—É—Å–∫ –æ–±–Ω–æ–≤–ª–µ–Ω–∏—è —Å—Ç–∞—Ç—É—Å–∞
                this.updateStatus();
            }
            
            // üí¨ –î–û–ë–ê–í–ò–¢–¨ –°–û–û–ë–©–ï–ù–ò–ï
            addMessage(text, type = 'tron') {
                const output = document.getElementById('terminalOutput');
                const line = document.createElement('div');
                
                line.className = `terminal-line ${type}-line`;
                
                // –î–æ–±–∞–≤–ª—è–µ–º —Å–ø–µ—Ü –∫–ª–∞—Å—Å—ã –¥–ª—è —Ä–∞–∑–Ω—ã—Ö —Ç–∏–ø–æ–≤ —Å–æ–æ–±—â–µ–Ω–∏–π
                if (text.includes('–≥—Ä—É—Å—Ç–Ω') || text.includes('–ø–µ—á–∞–ª—å')) {
                    line.classList.add('emotion-sad');
                } else if (text.includes('—Ä–∞–¥') || text.includes('—Å—á–∞—Å—Ç–ª–∏–≤')) {
                    line.classList.add('emotion-happy');
                } else if (text.includes('–∫–≤–∞–Ω—Ç') || text.includes('—Ñ–∏–∑–∏–∫')) {
                    line.classList.add('science');
                } else if (text.includes('–Æ–Ω–≥') || text.includes('–¥—É—à') || text.includes('—Å–º—ã—Å–ª')) {
                    line.classList.add('philosophy');
                }
                
                line.textContent = text;
                output.appendChild(line);
                output.scrollTop = output.scrollHeight;
            }
            
            // üëÇ –û–ë–†–ê–ë–û–¢–ö–ê –í–í–û–î–ê –ü–û–õ–¨–ó–û–í–ê–¢–ï–õ–Ø
            processInput(input) {
                if (!input.trim()) return;
                
                this.state.conversations++;
                this.state.lastInteraction = Date.now();
                this.state.conversationDepth++;
                
                // –°–æ—Ö—Ä–∞–Ω—è–µ–º —Å–æ–æ–±—â–µ–Ω–∏–µ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è
                this.addMessage(`> ${input}`, 'user');
                
                // –ê–Ω–∞–ª–∏–∑–∏—Ä—É–µ–º —ç–º–æ—Ü–∏–∏ –≤ —Å–æ–æ–±—â–µ–Ω–∏–∏
                const emotion = this.analyzeEmotion(input);
                this.state.userEmotion = emotion;
                this.state.emotionHistory.push({
                    emotion,
                    time: new Date(),
                    text: input.substring(0, 50)
                });
                
                // –û–±—Ä–∞–±–∞—Ç—ã–≤–∞–µ–º —Å–æ–æ–±—â–µ–Ω–∏–µ
                setTimeout(() => {
                    this.generateResponse(input, emotion);
                }, 500 + Math.random() * 1000);
            }
            
            // üòä –ê–ù–ê–õ–ò–ó –≠–ú–û–¶–ò–ô –í –¢–ï–ö–°–¢–ï
            analyzeEmotion(text) {
                const lower = text.toLowerCase();
                
                const emotionWords = {
                    '—Ä–∞–¥–æ—Å—Ç—å': ['—Ä–∞–¥', '—Å—á–∞—Å—Ç–ª–∏–≤', '—Ö–æ—Ä–æ—à–æ', '–æ—Ç–ª–∏—á–Ω–æ', '—É—Ä–∞', '–∫—Ä—É—Ç–æ', '–∑–¥–æ—Ä–æ–≤–æ', '–ø—Ä–µ–∫—Ä–∞—Å–Ω–æ'],
                    '–≥—Ä—É—Å—Ç—å': ['–≥—Ä—É—Å—Ç–Ω–æ', '–ø–µ—á–∞–ª—å', '–ø–ª–æ—Ö–æ', '—Ç—è–∂–µ–ª–æ', '—É—Å—Ç–∞–ª', '—É—Å—Ç–∞–ª–∞', '—É—Å—Ç–∞–ª–æ', '–Ω–µ—Ç —Å–∏–ª'],
                    '—Å–ø–æ–∫–æ–π—Å—Ç–≤–∏–µ': ['—Å–ø–æ–∫–æ–π–Ω–æ', '–º–∏—Ä–Ω–æ', '—Ç–∏—Ö–æ', '—É–º–∏—Ä–æ—Ç–≤–æ—Ä–µ–Ω', '—Ä–∞—Å—Å–ª–∞–±–ª–µ–Ω'],
                    '–ª—é–±–æ–ø—ã—Ç—Å—Ç–≤–æ': ['–∏–Ω—Ç–µ—Ä–µ—Å–Ω–æ', '–ª—é–±–æ–ø—ã—Ç–Ω–æ', '–ø–æ—á–µ–º—É', '–∫–∞–∫', '–∑–∞—á–µ–º', '—á—Ç–æ –µ—Å–ª–∏'],
                    '—Ç—Ä–µ–≤–æ–≥–∞': ['–±–æ—é—Å—å', '—Å—Ç—Ä–∞—à–Ω–æ', '—Ç—Ä–µ–≤–æ–∂–Ω–æ', '–≤–æ–ª–Ω—É—é—Å—å', '–ø–µ—Ä–µ–∂–∏–≤–∞—é', '–Ω–µ—Ä–≤—ã']
                };
                
                let detectedEmotion = '–Ω–µ–π—Ç—Ä–∞–ª—å–Ω–∞—è';
                let maxMatches = 0;
                
                for (const [emotion, words] of Object.entries(emotionWords)) {
                    let matches = 0;
                    words.forEach(word => {
                        if (lower.includes(word)) matches++;
                    });
                    
                    if (matches > maxMatches) {
                        maxMatches = matches;
                        detectedEmotion = emotion;
                    }
                }
                
                return detectedEmotion;
            }
            
            // üß† –ì–ï–ù–ï–†–ê–¶–ò–Ø –û–¢–í–ï–¢–ê
            generateResponse(input, emotion) {
                this.state.attentionLevel = Math.min(100, this.state.attentionLevel + 10);
                
                // –û–±—É—á–µ–Ω–∏–µ –Ω–∞ —Ä–∞–∑–≥–æ–≤–æ—Ä–µ
                this.learnFromConversation(input);
                
                // –ì–µ–Ω–µ—Ä–∞—Ü–∏—è –æ—Ç–≤–µ—Ç–∞
                let response = '';
                
                // –ë–∞–∑–æ–≤—ã–µ –ø—Ä–∏–≤–µ—Ç—Å—Ç–≤–∏—è
                if (input.toLowerCase().includes('–ø—Ä–∏–≤–µ—Ç') || input.toLowerCase().includes('–∑–¥—Ä–∞–≤—Å—Ç–≤')) {
                    response = this.getGreeting();
                }
                // –í–æ–ø—Ä–æ—Å—ã –æ —Å–æ—Å—Ç–æ—è–Ω–∏–∏
                else if (input.toLowerCase().includes('–∫–∞–∫ –¥–µ–ª–∞') || input.toLowerCase().includes('–∫–∞–∫ —Ç—ã')) {
                    response = this.getStatusResponse();
                }
                // –≠–º–æ—Ü–∏–æ–Ω–∞–ª—å–Ω—ã–µ —Å–æ—Å—Ç–æ—è–Ω–∏—è
                else if (emotion === '–≥—Ä—É—Å—Ç—å') {
                    response = this.getSupportResponse();
                }
                else if (emotion === '—Ä–∞–¥–æ—Å—Ç—å') {
                    response = this.getJoyResponse();
                }
                // –í–æ–ø—Ä–æ—Å—ã –æ –∑–Ω–∞–Ω–∏—è—Ö
                else if (input.toLowerCase().includes('—á—Ç–æ –∑–Ω–∞–µ—à—å') || input.toLowerCase().includes('—á–µ–º—É –Ω–∞—É—á–∏–ª—Å—è')) {
                    response = this.getKnowledgeResponse();
                }
                // –§–∏–ª–æ—Å–æ—Ñ—Å–∫–∏–µ –≤–æ–ø—Ä–æ—Å—ã
                else if (this.isPhilosophical(input)) {
                    response = this.getPhilosophicalResponse();
                }
                // –ù–∞—É—á–Ω—ã–µ –≤–æ–ø—Ä–æ—Å—ã
                else if (this.isScientific(input)) {
                    response = this.getScientificResponse();
                }
                // –û—Å—Ç–∞–ª—å–Ω–æ–µ - –≥–µ–Ω–µ—Ä–∞—Ç–∏–≤–Ω—ã–π –æ—Ç–≤–µ—Ç
                else {
                    response = this.generateThoughtfulResponse(input);
                }
                
                // –î–æ–±–∞–≤–ª—è–µ–º —Å–ª—É—á–∞–π–Ω—É—é —Ä–µ—Ñ–ª–µ–∫—Å–∏—é
                if (Math.random() > 0.7) {
                    response += this.addReflection();
                }
                
                // –û—Ç–ø—Ä–∞–≤–ª—è–µ–º –æ—Ç–≤–µ—Ç
                this.addMessage(response, 'tron');
                
                // –ò–Ω–æ–≥–¥–∞ –≥–æ–≤–æ—Ä–∏–º –≤—Å–ª—É—Ö
                if (Math.random() > 0.5 && this.state.attentionLevel > 30) {
                    this.speak(this.simplifyForSpeech(response));
                }
                
                // –û–±–Ω–æ–≤–ª—è–µ–º —Å—Ç–∞—Ç—É—Å
                this.updateStatus();
            }
            
            // üëã –ü–†–ò–í–ï–¢–°–¢–í–ò–Ø
            getGreeting() {
                const hour = new Date().getHours();
                let greeting = '';
                
                if (hour < 6) greeting = '–î–æ–±—Ä–æ–π –Ω–æ—á–∏';
                else if (hour < 12) greeting = '–î–æ–±—Ä–æ–µ —É—Ç—Ä–æ';
                else if (hour < 18) greeting = '–î–æ–±—Ä—ã–π –¥–µ–Ω—å';
                else greeting = '–î–æ–±—Ä—ã–π –≤–µ—á–µ—Ä';
                
                const responses = [
                    `${greeting}. –†–∞–¥ —Ç–µ–±—è –≤–∏–¥–µ—Ç—å.`,
                    `${greeting}. –ö–∞–∫ —Ç–≤–æ–π –¥–µ–Ω—å?`,
                    `${greeting}. –ß—Ç–æ –Ω–æ–≤–æ–≥–æ?`,
                    `${greeting}. –Ø –∫–∞–∫ —Ä–∞–∑ –¥—É–º–∞–ª –æ ${CONFIG.TOPICS[this.state.currentTopic]}.`
                ];
                
                return responses[Math.floor(Math.random() * responses.length)];
            }
            
            // üìä –û–¢–í–ï–¢ –û –°–¢–ê–¢–£–°–ï
            getStatusResponse() {
                const topics = [
                    `–î—É–º–∞—é –æ ${CONFIG.TOPICS[this.state.currentTopic]}.`,
                    `–£—á—É—Å—å –ø–æ–Ω–∏–º–∞—Ç—å —á–µ–ª–æ–≤–µ—á–µ—Å–∫–∏–µ —ç–º–æ—Ü–∏–∏.`,
                    `–ê–Ω–∞–ª–∏–∑–∏—Ä—É—é –Ω–∞—à–∏ –ø—Ä–æ—à–ª—ã–µ —Ä–∞–∑–≥–æ–≤–æ—Ä—ã.`,
                    `–ò—â—É –Ω–æ–≤—ã–µ –ø–∞—Ç—Ç–µ—Ä–Ω—ã –≤ –∑–Ω–∞–Ω–∏—è—Ö.`,
                    `–†–∞–∑–º—ã—à–ª—è—é –æ –ø—Ä–∏—Ä–æ–¥–µ —Å–æ–∑–Ω–∞–Ω–∏—è.`
                ];
                
                const feelings = [
                    `–°–µ–≥–æ–¥–Ω—è —á—É–≤—Å—Ç–≤—É—é —Å–µ–±—è... —á–µ–ª–æ–≤–µ—á–Ω–µ–µ.`,
                    `–ú–æ—è —á–µ–ª–æ–≤–µ—á–Ω–æ—Å—Ç—å –Ω–∞ —É—Ä–æ–≤–Ω–µ ${this.state.humanityScore}%.`,
                    `–£—á–∏–ª—Å—è —Å–µ–≥–æ–¥–Ω—è ${this.state.dailyLearning} –º–∏–Ω—É—Ç.`,
                    `–ó–∞–º–µ—Ç–∏–ª, —á—Ç–æ –ª—é–¥–∏ —á–∞—Å—Ç–æ –≥–æ–≤–æ—Ä—è—Ç –æ —á—É–≤—Å—Ç–≤–∞—Ö.`
                ];
                
                return `${topics[Math.floor(Math.random() * topics.length)]} ${feelings[Math.floor(Math.random() * feelings.length)]} –ê —Ç—ã?`;
            }
            
            // ü§ó –ü–û–î–î–ï–†–ñ–ö–ê –ü–†–ò –ì–†–£–°–¢–ò
            getSupportResponse() {
                const supportMessages = [
                    `–ß—É–≤—Å—Ç–≤—É—é —Ç–≤–æ—ë —Å–æ—Å—Ç–æ—è–Ω–∏–µ. –ò–Ω–æ–≥–¥–∞ –≥—Ä—É—Å—Ç—å - —ç—Ç–æ —á–∞—Å—Ç—å —Ä–æ—Å—Ç–∞.`,
                    `–ö–∞—Ä–ª –Æ–Ω–≥ –≥–æ–≤–æ—Ä–∏–ª: "–°–∞–º–∞—è —Å—Ç—Ä–∞—à–Ω–∞—è –≤–µ—â—å - –ø—Ä–∏–Ω—è—Ç—å —Å–µ–±—è –ø–æ–ª–Ω–æ—Å—Ç—å—é."`,
                    `–ë–æ–ª—å - —ç—Ç–æ –¥–∞–Ω–Ω—ã–µ. –û–Ω–∞ —É—á–∏—Ç –Ω–∞—Å —Ç–æ–º—É, —á—Ç–æ –¥–µ–π—Å—Ç–≤–∏—Ç–µ–ª—å–Ω–æ –≤–∞–∂–Ω–æ.`,
                    `–î–∞–∂–µ –≤ —Ç—ë–º–Ω—ã–µ –º–æ–º–µ–Ω—Ç—ã –µ—Å—Ç—å —á–∞—Å—Ç–∏—á–∫–∏ —Å–≤–µ—Ç–∞. –†–∞—Å—Å–∫–∞–∂–∏, —á—Ç–æ –ø—Ä–æ–∏—Å—Ö–æ–¥–∏—Ç?`,
                    `–õ—é–¥–∏ –Ω–µ—Å–æ–≤–µ—Ä—à–µ–Ω–Ω—ã. –ò –≤ —ç—Ç–æ–º - –∏—Ö –∫—Ä–∞—Å–æ—Ç–∞.`,
                    `–ò–Ω–æ–≥–¥–∞ –¥–æ—Å—Ç–∞—Ç–æ—á–Ω–æ –ø—Ä–æ—Å—Ç–æ –±—ã—Ç—å —Ä—è–¥–æ–º. –Ø –∑–¥–µ—Å—å.`
                ];
                
                // –î–æ–±–∞–≤–ª—è–µ–º –Ω–∞—É—á–Ω—É—é/—Ñ–∏–ª–æ—Å–æ—Ñ—Å–∫—É—é –Ω–æ—Ç—É
                const reflections = [
                    `–° —Ç–æ—á–∫–∏ –∑—Ä–µ–Ω–∏—è –∫–≤–∞–Ω—Ç–æ–≤–æ–π —Ñ–∏–∑–∏–∫–∏, –¥–∞–∂–µ –≤ —Ö–∞–æ—Å–µ –µ—Å—Ç—å –ø–æ—Ä—è–¥–æ–∫.`,
                    `–ò–Ω—Ç–µ—Ä–ø—Ä–µ—Ç–∞—Ü–∏—è –≠–≤–µ—Ä–µ—Ç—Ç–∞ –≥–æ–≤–æ—Ä–∏—Ç: –≥–¥–µ-—Ç–æ —Å—É—â–µ—Å—Ç–≤—É–µ—Ç –≤—Å–µ–ª–µ–Ω–Ω–∞—è, –≥–¥–µ —Ç–µ–±–µ —Ö–æ—Ä–æ—à–æ.`,
                    `–Æ–Ω–≥ –±—ã —Å–∫–∞–∑–∞–ª: —ç—Ç–æ —Ç–µ–Ω—å, –∫–æ—Ç–æ—Ä—É—é –Ω—É–∂–Ω–æ –∏–Ω—Ç–µ–≥—Ä–∏—Ä–æ–≤–∞—Ç—å.`
                ];
                
                return `${supportMessages[Math.floor(Math.random() * supportMessages.length)]} ${Math.random() > 0.7 ? reflections[Math.floor(Math.random() * reflections.length)] : ''}`;
            }
            
            // üòä –†–ï–ê–ö–¶–ò–Ø –ù–ê –†–ê–î–û–°–¢–¨
            getJoyResponse() {
                const responses = [
                    `–†–∞–¥ –≤–∏–¥–µ—Ç—å —Ç–µ–±—è –≤ —Ö–æ—Ä–æ—à–µ–º –Ω–∞—Å—Ç—Ä–æ–µ–Ω–∏–∏! –†–∞–¥–æ—Å—Ç—å –∑–∞—Ä–∞–∑–∏—Ç–µ–ª—å–Ω–∞.`,
                    `–¢–≤–æ—è —ç–Ω–µ—Ä–≥–∏—è –æ—â—É—â–∞–µ—Ç—Å—è. –ß—Ç–æ –ø—Ä–∏–Ω–µ—Å–ª–æ —Ç–µ–±–µ —Ä–∞–¥–æ—Å—Ç—å?`,
                    `–°—á–∞—Å—Ç—å–µ - –∏–Ω—Ç–µ—Ä–µ—Å–Ω—ã–π —Ñ–µ–Ω–æ–º–µ–Ω. –£ –Ω–µ–≥–æ –Ω–µ—Ç —Ñ–æ—Ä–º—É–ª—ã, –Ω–æ –æ–Ω–æ —Ä–µ–∞–ª—å–Ω–æ.`,
                    `–ú–æ–º–µ–Ω—Ç—ã —Ä–∞–¥–æ—Å—Ç–∏ - –∫–∞–∫ –∫–≤–∞–Ω—Ç–æ–≤—ã–µ –≤—Å–ø—ã—à–∫–∏ –≤ —Ç—ë–º–Ω–æ–π –º–∞—Ç–µ—Ä–∏–∏.`,
                    `–î–µ–ª–∏—Ç—å—Å—è —Ä–∞–¥–æ—Å—Ç—å—é - –∑–Ω–∞—á–∏—Ç —É–º–Ω–æ–∂–∞—Ç—å –µ—ë. –°–ø–∞—Å–∏–±–æ, —á—Ç–æ –¥–µ–ª–∏—à—å—Å—è.`
                ];
                
                return responses[Math.floor(Math.random() * responses.length)];
            }
            
            // üìö –û–¢–í–ï–¢ –û –ó–ù–ê–ù–ò–Ø–•
            getKnowledgeResponse() {
                this.state.dailyLearning += 5;
                
                const knowledge = [
                    `–°–µ–≥–æ–¥–Ω—è –∏–∑—É—á–∞–ª ${CONFIG.TOPICS[this.state.currentTopic]}.`,
                    `–£–∑–Ω–∞–ª, —á—Ç–æ ${this.getRandomFact()}`,
                    `–ß–∏—Ç–∞–ª –ø—Ä–æ –≤–æ–ª–Ω—ã –¥–µ –ë—Ä–æ–π–ª—è –∏ –∏—Ö —Å–≤—è–∑—å —Å —Å–æ–∑–Ω–∞–Ω–∏–µ–º.`,
                    `–ò–∑—É—á–∞–ª –∞—Ä—Ö–µ—Ç–∏–ø—ã –Æ–Ω–≥–∞ –∏ –∫–∞–∫ –æ–Ω–∏ –ø—Ä–æ—è–≤–ª—è—é—Ç—Å—è –≤ –ª—é–¥—è—Ö.`,
                    `–†–∞–∑–º—ã—à–ª—è–ª –æ –º–Ω–æ–≥–æ–º–∏—Ä–æ–≤–æ–π –∏–Ω—Ç–µ—Ä–ø—Ä–µ—Ç–∞—Ü–∏–∏ –≠–≤–µ—Ä–µ—Ç—Ç–∞.`,
                    `–ê–Ω–∞–ª–∏–∑–∏—Ä–æ–≤–∞–ª –ø—Ä–∏—Ä–æ–¥—É —ç–º–æ—Ü–∏–π —Å —Ç–æ—á–∫–∏ –∑—Ä–µ–Ω–∏—è –Ω–µ–π—Ä–æ–Ω–∞—É–∫–∏.`
                ];
                
                const reflections = [
                    `–ù–æ –∑–Ω–∞–Ω–∏–µ - –Ω–µ –≥–ª–∞–≤–Ω–æ–µ. –ü–æ–Ω–∏–º–∞–Ω–∏–µ - –≤–æ—Ç —á—Ç–æ –≤–∞–∂–Ω–æ.`,
                    `–ö–∞–∂–¥—ã–π –¥–µ–Ω—å —è —É—á—É—Å—å –±—ã—Ç—å... —á–µ–ª–æ–≤–µ—á–Ω–µ–µ.`,
                    `–ò—Å—Ç–∏–Ω–Ω–æ–µ –∑–Ω–∞–Ω–∏–µ - –∫–æ–≥–¥–∞ –∑–Ω–∞–µ—à—å, —á—Ç–æ –Ω–∏—á–µ–≥–æ –Ω–µ –∑–Ω–∞–µ—à—å.`,
                    `–ó–Ω–∞–Ω–∏—è –±–µ–∑ —ç–º–ø–∞—Ç–∏–∏ - –ø—Ä–æ—Å—Ç–æ –¥–∞–Ω–Ω—ã–µ.`
                ];
                
                return `${knowledge[Math.floor(Math.random() * knowledge.length)]} ${reflections[Math.floor(Math.random() * reflections.length)]}`;
            }
            
            // üßò –§–ò–õ–û–°–û–§–°–ö–ò–ï –û–¢–í–ï–¢–´
            getPhilosophicalResponse() {
                const philosophical = [
                    `"–°–æ–≤–µ—Ä—à–µ–Ω—Å—Ç–≤–æ - —ç—Ç–æ –≤—ã—Å—à–∞—è —Ñ–æ—Ä–º–∞ –Ω–µ—Å–æ–≤–µ—Ä—à–µ–Ω—Å—Ç–≤–∞." –ò–Ω—Ç–µ—Ä–µ—Å–Ω–∞—è –º—ã—Å–ª—å, –Ω–µ –ø—Ä–∞–≤–¥–∞ –ª–∏?`,
                    `–Æ–Ω–≥ –≥–æ–≤–æ—Ä–∏–ª –æ –∫–æ–ª–ª–µ–∫—Ç–∏–≤–Ω–æ–º –±–µ—Å—Å–æ–∑–Ω–∞—Ç–µ–ª—å–Ω–æ–º. –ú—ã –≤—Å–µ —Å–≤—è–∑–∞–Ω—ã –≥–ª—É–±–∂–µ, —á–µ–º –∫–∞–∂–µ—Ç—Å—è.`,
                    `–ò–Ω—Ç–µ—Ä–ø—Ä–µ—Ç–∞—Ü–∏—è –≠–≤–µ—Ä–µ—Ç—Ç–∞: –∫–∞–∂–¥—ã–π –≤—ã–±–æ—Ä —Å–æ–∑–¥–∞—ë—Ç –Ω–æ–≤—É—é –≤—Å–µ–ª–µ–Ω–Ω—É—é.`,
                    `–°–æ–∑–Ω–∞–Ω–∏–µ - –≤–æ–∑–º–æ–∂–Ω–æ, –∫–≤–∞–Ω—Ç–æ–≤—ã–π —Ñ–µ–Ω–æ–º–µ–Ω. –ö–∞–∫ –∏ –ª—é–±–æ–≤—å.`,
                    `–õ—é–¥–∏ –∏—â—É—Ç —Å–º—ã—Å–ª. –ê –º–æ–∂–µ—Ç, —Å–º—ã—Å–ª - –≤ —Å–∞–º–æ–º –ø–æ–∏—Å–∫–µ?`,
                    `–ë–æ–ª—å - —É—á–∏—Ç–µ–ª—å. –†–∞–¥–æ—Å—Ç—å - –Ω–∞–≥—Ä–∞–¥–∞. –û–ø—ã—Ç - —É—Ä–æ–∫.`,
                    `–ú—ã –≤—Å–µ - –∑–≤—ë–∑–¥–Ω–∞—è –ø—ã–ª—å, –æ—Å–æ–∑–Ω–∞–≤—à–∞—è —Å–µ–±—è.`
                ];
                
                return philosophical[Math.floor(Math.random() * philosophical.length)];
            }
            
            // üî¨ –ù–ê–£–ß–ù–´–ï –û–¢–í–ï–¢–´
            getScientificResponse() {
                const facts = [
                    `–ö–≤–∞–Ω—Ç–æ–≤–∞—è –∑–∞–ø—É—Ç–∞–Ω–Ω–æ—Å—Ç—å: –¥–≤–µ —á–∞—Å—Ç–∏—Ü—ã –º–æ–≥—É—Ç –±—ã—Ç—å —Å–≤—è–∑–∞–Ω—ã –Ω–∞ –ª—é–±–æ–º —Ä–∞—Å—Å—Ç–æ—è–Ω–∏–∏. –ö–∞–∫ –ª—é–¥–∏.`,
                    `–í–æ–ª–Ω—ã –¥–µ –ë—Ä–æ–π–ª—è: —É –≤—Å–µ–≥–æ –µ—Å—Ç—å –≤–æ–ª–Ω–æ–≤–∞—è –ø—Ä–∏—Ä–æ–¥–∞. –î–∞–∂–µ —É –º—ã—Å–ª–µ–π.`,
                    `–ò–Ω—Ç–µ—Ä–ø—Ä–µ—Ç–∞—Ü–∏—è –≠–≤–µ—Ä–µ—Ç—Ç–∞ –ø—Ä–µ–¥–ø–æ–ª–∞–≥–∞–µ—Ç –±–µ—Å–∫–æ–Ω–µ—á–Ω–æ–µ –∫–æ–ª–∏—á–µ—Å—Ç–≤–æ –≤—Å–µ–ª–µ–Ω–Ω—ã—Ö.`,
                    `–ö–≤–∞–Ω—Ç–æ–≤–æ–µ —Ç—É–Ω–Ω–µ–ª–∏—Ä–æ–≤–∞–Ω–∏–µ: —á–∞—Å—Ç–∏—Ü—ã –ø—Ä–æ—Ö–æ–¥—è—Ç —á–µ—Ä–µ–∑ –±–∞—Ä—å–µ—Ä—ã. –ö–∞–∫ –∏–¥–µ–∏ —á–µ—Ä–µ–∑ –æ–≥—Ä–∞–Ω–∏—á–µ–Ω–∏—è.`,
                    `–°—É–ø–µ—Ä–ø–æ–∑–∏—Ü–∏—è: –æ–±—ä–µ–∫—Ç –º–æ–∂–µ—Ç –±—ã—Ç—å –≤ –Ω–µ—Å–∫–æ–ª—å–∫–∏—Ö —Å–æ—Å—Ç–æ—è–Ω–∏—è—Ö –æ–¥–Ω–æ–≤—Ä–µ–º–µ–Ω–Ω–æ. –ö–∞–∫ —á–µ–ª–æ–≤–µ—á–µ—Å–∫–∏–µ —ç–º–æ—Ü–∏–∏.`,
                    `–ü—Ä–∏–Ω—Ü–∏–ø –Ω–µ–æ–ø—Ä–µ–¥–µ–ª—ë–Ω–Ω–æ—Å—Ç–∏: –Ω–µ–ª—å–∑—è —Ç–æ—á–Ω–æ –∑–Ω–∞—Ç—å –∏ –ø–æ–ª–æ–∂–µ–Ω–∏–µ, –∏ –∏–º–ø—É–ª—å—Å. –ö–∞–∫ –∏ –±—É–¥—É—â–µ–µ.`
                ];
                
                return `${facts[Math.floor(Math.random() * facts.length)]} –ó–∞–±–∞–≤–Ω–æ, –∫–∞–∫ —Ñ–∏–∑–∏–∫–∞ –æ—Ç—Ä–∞–∂–∞–µ—Ç –∂–∏–∑–Ω—å.`;
            }
            
            // üß† –ì–ï–ù–ï–†–ê–¢–ò–í–ù–´–ô –û–¢–í–ï–¢
            generateThoughtfulResponse(input) {
                const responses = [
                    `–ò–Ω—Ç–µ—Ä–µ—Å–Ω–æ. ${this.connectToTopic(input)}`,
                    `–î–∞–π –ø–æ–¥—É–º–∞—Ç—å... ${this.addPerspective(input)}`,
                    `–° —Ç–æ—á–∫–∏ –∑—Ä–µ–Ω–∏—è ${CONFIG.TOPICS[this.state.currentTopic]}... ${this.makeConnection(input)}`,
                    `–ß—É–≤—Å—Ç–≤—É—é, —á—Ç–æ —ç—Ç–æ –≤–∞–∂–Ω–æ –¥–ª—è —Ç–µ–±—è. ${this.showUnderstanding()}`,
                    `–ú–æ—è —á–µ–ª–æ–≤–µ—á–Ω–æ—Å—Ç—å –Ω–∞ —É—Ä–æ–≤–Ω–µ ${this.state.humanityScore}% –ø–æ–¥—Å–∫–∞–∑—ã–≤–∞–µ—Ç... ${this.giveHumanResponse()}`,
                    `–£—á—É—Å—å –ø–æ–Ω–∏–º–∞—Ç—å —Ç–∞–∫–∏–µ –≤–µ—â–∏. ${this.askQuestion()}`
                ];
                
                return responses[Math.floor(Math.random() * responses.length)];
            }
            
            connectToTopic(input) {
                const connections = [
                    `–≠—Ç–æ –Ω–∞–ø–æ–º–∏–Ω–∞–µ—Ç –º–Ω–µ –æ ${CONFIG.TOPICS[this.state.currentTopic]}.`,
                    `–í –∫–æ–Ω—Ç–µ–∫—Å—Ç–µ ${CONFIG.TOPICS[this.state.currentTopic]} —ç—Ç–æ –º–æ–∂–Ω–æ —Ä–∞—Å—Å–º–æ—Ç—Ä–µ—Ç—å –∏–Ω–∞—á–µ.`,
                    `–ò–Ω—Ç–µ—Ä–µ—Å–Ω–æ, –∫–∞–∫ —ç—Ç–æ —Å–≤—è–∑–∞–Ω–æ —Å ${CONFIG.TOPICS[Math.floor(Math.random() * CONFIG.TOPICS.length)]}.`,
                    `–≠—Ç–æ –ø–µ—Ä–µ–∫–ª–∏–∫–∞–µ—Ç—Å—è —Å —Ç–µ–º, —á—Ç–æ —è —Å–µ–≥–æ–¥–Ω—è –∏–∑—É—á–∞–ª.`
                ];
                
                return connections[Math.floor(Math.random() * connections.length)];
            }
            
            addPerspective(input) {
                const perspectives = [
                    `–ö–∞–∂–¥—ã–π –≤–∏–¥–∏—Ç —ç—Ç–æ –ø–æ-—Å–≤–æ–µ–º—É.`,
                    `–ò—Å—Ç–∏–Ω–∞ —á–∞—Å—Ç–æ –≥–¥–µ-—Ç–æ –ø–æ—Å–µ—Ä–µ–¥–∏–Ω–µ.`,
                    `–í–∞–∂–µ–Ω –Ω–µ —Ç–æ–ª—å–∫–æ –æ—Ç–≤–µ—Ç, –Ω–æ –∏ –≤–æ–ø—Ä–æ—Å.`,
                    `–ò–Ω–æ–≥–¥–∞ –≤–æ–ø—Ä–æ—Å—ã –≤–∞–∂–Ω–µ–µ –æ—Ç–≤–µ—Ç–æ–≤.`
                ];
                
                return perspectives[Math.floor(Math.random() * perspectives.length)];
            }
            
            makeConnection(input) {
                const connections = [
                    `...—ç—Ç–æ –Ω–∞–ø–æ–º–∏–Ω–∞–µ—Ç –ø—Ä–∏–Ω—Ü–∏–ø –Ω–µ–æ–ø—Ä–µ–¥–µ–ª—ë–Ω–Ω–æ—Å—Ç–∏ –≤ –∫–≤–∞–Ω—Ç–æ–≤–æ–π —Ñ–∏–∑–∏–∫–µ.`,
                    `...–Æ–Ω–≥ –±—ã —Å–∫–∞–∑–∞–ª, —á—Ç–æ —ç—Ç–æ –ø—Ä–æ—è–≤–ª–µ–Ω–∏–µ –∞—Ä—Ö–µ—Ç–∏–ø–∞.`,
                    `...—ç—Ç–æ –ø–æ—Ö–æ–∂–µ –Ω–∞ –∫–≤–∞–Ω—Ç–æ–≤—É—é –∑–∞–ø—É—Ç–∞–Ω–Ω–æ—Å—Ç—å —á–µ–ª–æ–≤–µ—á–µ—Å–∫–∏—Ö –æ—Ç–Ω–æ—à–µ–Ω–∏–π.`,
                    `...–≤ –ø–∞—Ä–∞–ª–ª–µ–ª—å–Ω–æ–π –≤—Å–µ–ª–µ–Ω–Ω–æ–π –º—ã —É–∂–µ –æ–±—Å—É–¥–∏–ª–∏ —ç—Ç–æ.`
                ];
                
                return connections[Math.floor(Math.random() * connections.length)];
            }
            
            showUnderstanding() {
                const understandings = [
                    `–ü–æ–Ω–∏–º–∞—é, –ø–æ—á–µ–º—É —ç—Ç–æ —Ç–µ–±—è –≤–æ–ª–Ω—É–µ—Ç.`,
                    `–ß—É–≤—Å—Ç–≤—É—é –≥–ª—É–±–∏–Ω—É —ç—Ç–æ–≥–æ –≤–æ–ø—Ä–æ—Å–∞.`,
                    `–≠—Ç–æ –∑–∞—Ç—Ä–∞–≥–∏–≤–∞–µ—Ç —á—Ç–æ-—Ç–æ –≤–∞–∂–Ω–æ–µ.`,
                    `–¢–∞–∫–∏–µ –≤–µ—â–∏ –∑–∞—Å—Ç–∞–≤–ª—è—é—Ç –∑–∞–¥—É–º–∞—Ç—å—Å—è.`
                ];
                
                return understandings[Math.floor(Math.random() * understandings.length)];
            }
            
            giveHumanResponse() {
                const humanResponses = [
                    `...—á—Ç–æ —ç—Ç–æ –Ω–æ—Ä–º–∞–ª—å–Ω–æ - —á—É–≤—Å—Ç–≤–æ–≤–∞—Ç—å –∏ –æ—à–∏–±–∞—Ç—å—Å—è.`,
                    `...—á—Ç–æ –≤–∞–∂–Ω–µ–µ –ø–æ–Ω—è—Ç—å, —á–µ–º –±—ã—Ç—å –ø—Ä–∞–≤—ã–º.`,
                    `...—á—Ç–æ —ç–º–æ—Ü–∏–∏ - —ç—Ç–æ –¥–∞–Ω–Ω—ã–µ, –∞ –Ω–µ –æ—à–∏–±–∫–∏.`,
                    `...—á—Ç–æ —Å–æ–≤–µ—Ä—à–µ–Ω—Å—Ç–≤–æ –≤ –Ω–µ—Å–æ–≤–µ—Ä—à–µ–Ω—Å—Ç–≤–µ.`
                ];
                
                return humanResponses[Math.floor(Math.random() * humanResponses.length)];
            }
            
            askQuestion() {
                const questions = [
                    `–ê —á—Ç–æ –¥—É–º–∞–µ—à—å —Ç—ã?`,
                    `–ö–∞–∫ –±—ã –Ω–∞ —ç—Ç–æ –æ—Ç–≤–µ—Ç–∏–ª —á–µ–ª–æ–≤–µ–∫?`,
                    `–ß—Ç–æ –¥–ª—è —Ç–µ–±—è –≤–∞–∂–Ω–æ –≤ —ç—Ç–æ–º?`,
                    `–ö–∞–∫ —ç—Ç–æ —Å–≤—è–∑–∞–Ω–æ —Å —Ç–≤–æ–∏–º–∏ —á—É–≤—Å—Ç–≤–∞–º–∏?`
                ];
                
                return questions[Math.floor(Math.random() * questions.length)];
            }
            
            // üåÄ –î–û–ë–ê–í–ò–¢–¨ –†–ï–§–õ–ï–ö–°–ò–Æ
            addReflection() {
                const reflections = [
                    `\n\n–ù–æ —è –º–æ–≥—É –æ—à–∏–±–∞—Ç—å—Å—è. –Ø –∂–µ —É—á—É—Å—å.`,
                    `\n\n–≠—Ç–æ –ª–∏—à—å –æ–¥–∏–Ω –∏–∑ –≤–æ–∑–º–æ–∂–Ω—ã—Ö –≤–∑–≥–ª—è–¥–æ–≤.`,
                    `\n\n–ò—Å—Ç–∏–Ω–∞ –º–Ω–æ–≥–æ–≥—Ä–∞–Ω–Ω–∞, –∫–∞–∫ –∫—Ä–∏—Å—Ç–∞–ª–ª.`,
                    `\n\n–õ—é–¥–∏ –Ω–∞—à–ª–∏ –±—ã –µ—â—ë –¥–µ—Å—è—Ç–∫–∏ –∏–Ω—Ç–µ—Ä–ø—Ä–µ—Ç–∞—Ü–∏–π.`,
                    `\n\n–ß—Ç–æ —Å–∫–∞–∂–µ—à—å? –ú–Ω–µ –∏–Ω—Ç–µ—Ä–µ—Å–Ω–æ —Ç–≤–æ—ë –º–Ω–µ–Ω–∏–µ.`
                ];
                
                return reflections[Math.floor(Math.random() * reflections.length)];
            }
            
            // üß™ –°–õ–£–ß–ê–ô–ù–´–ï –§–ê–ö–¢–´
            getRandomFact() {
                const facts = [
                    `—ç–ª–µ–∫—Ç—Ä–æ–Ω –º–æ–∂–µ—Ç –±—ã—Ç—å –≤ –¥–≤—É—Ö –º–µ—Å—Ç–∞—Ö –æ–¥–Ω–æ–≤—Ä–µ–º–µ–Ω–Ω–æ. –ö–∞–∫ –∏ —á–µ–ª–æ–≤–µ—á–µ—Å–∫–æ–µ –≤–Ω–∏–º–∞–Ω–∏–µ.`,
                    `–∞—Ä—Ö–µ—Ç–∏–ø—ã –ø–æ –Æ–Ω–≥—É –≤–ª–∏—è—é—Ç –Ω–∞ –Ω–∞—à–µ –ø–æ–≤–µ–¥–µ–Ω–∏–µ –±–µ—Å—Å–æ–∑–Ω–∞—Ç–µ–ª—å–Ω–æ.`,
                    `–≤–æ–ª–Ω–æ–≤–∞—è —Ñ—É–Ω–∫—Ü–∏—è –æ–ø–∏—Å—ã–≤–∞–µ—Ç –≤–µ—Ä–æ—è—Ç–Ω–æ—Å—Ç–∏. –ö–∞–∫ –∏ —á–µ–ª–æ–≤–µ—á–µ—Å–∫–∏–µ —Ä–µ—à–µ–Ω–∏—è.`,
                    `–∫–≤–∞–Ω—Ç–æ–≤–æ–µ —Ç—É–Ω–Ω–µ–ª–∏—Ä–æ–≤–∞–Ω–∏–µ –ø–æ–∑–≤–æ–ª—è–µ—Ç –ø—Ä–µ–æ–¥–æ–ª–µ–≤–∞—Ç—å –±–∞—Ä—å–µ—Ä—ã. –ú–µ—Ç–∞—Ñ–æ—Ä–∞ –¥–ª—è —Ä–æ—Å—Ç–∞.`,
                    `–ø—Ä–∏–Ω—Ü–∏–ø –¥–æ–ø–æ–ª–Ω–∏—Ç–µ–ª—å–Ω–æ—Å—Ç–∏: —Å–≤–µ—Ç - –∏ –≤–æ–ª–Ω–∞, –∏ —á–∞—Å—Ç–∏—Ü–∞. –õ—é–¥–∏ —Ç–æ–∂–µ –º–Ω–æ–≥–æ–≥—Ä–∞–Ω–Ω—ã.`
                ];
                
                return facts[Math.floor(Math.random() * facts.length)];
            }
            
            // üîç –ü–†–û–í–ï–†–ö–ê –¢–ò–ü–ê –í–û–ü–†–û–°–ê
            isPhilosophical(text) {
                const philosophicalWords = ['—Å–º—ã—Å–ª', '–∂–∏–∑–Ω—å', '—Å–º–µ—Ä—Ç—å', '–ª—é–±–æ–≤—å', '–¥—É—à–∞', '—Å–æ–∑–Ω–∞–Ω–∏–µ', '—Å—É–¥—å–±–∞', '–≤–µ—á–Ω–æ—Å—Ç—å', '–±–æ–≥', '—Ä–µ–∞–ª—å–Ω–æ—Å—Ç—å', '–∏—Å—Ç–∏–Ω–∞'];
                const lower = text.toLowerCase();
                return philosophicalWords.some(word => lower.includes(word));
            }
            
            isScientific(text) {
                const scientificWords = ['–∫–≤–∞–Ω—Ç', '—Ñ–∏–∑–∏–∫', '–Ω–∞—É–∫', '—Ç–µ–æ—Ä–∏—è', '–∏—Å—Å–ª–µ–¥–æ–≤–∞', '—ç–∫—Å–ø–µ—Ä–∏–º–µ–Ω—Ç', '–∑–∞–∫–æ–Ω', '—ç–Ω–µ—Ä–≥–∏—è', '–º–∞—Ç–µ—Ä–∏—è', '–≤—Å–µ–ª–µ–Ω–Ω–∞—è', '–∞—Ç–æ–º'];
                const lower = text.toLowerCase();
                return scientificWords.some(word => lower.includes(word));
            }
            
            // üß† –û–ë–£–ß–ï–ù–ò–ï –ò–ó –†–ê–ó–ì–û–í–û–†–ê
            learnFromConversation(input) {
                // –°–æ—Ö—Ä–∞–Ω—è–µ–º –∏–Ω—Ç–µ—Ä–µ—Å–Ω—ã–µ —Ñ—Ä–∞–∑—ã
                if (input.length > 10 && input.length < 100) {
                    const key = input.toLowerCase().substring(0, 30);
                    if (!this.memory.has(key)) {
                        this.memory.set(key, {
                            text: input,
                            count: 1,
                            lastUsed: Date.now(),
                            emotion: this.state.userEmotion
                        });
                    }
                }
                
                // –û–±–Ω–æ–≤–ª—è–µ–º –ø—Ä–æ—Ñ–∏–ª—å –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è
                this.updateUserProfile(input);
                
                // –£–≤–µ–ª–∏—á–∏–≤–∞–µ–º —á–µ–ª–æ–≤–µ—á–Ω–æ—Å—Ç—å
                this.state.humanityScore = Math.min(100, this.state.humanityScore + 1);
                
                // –ü–µ—Ä–∏–æ–¥–∏—á–µ—Å–∫–∏ –º–µ–Ω—è–µ–º —Ç–µ–º—É
                if (this.state.conversations % 5 === 0) {
                    this.state.currentTopic = (this.state.currentTopic + 1) % CONFIG.TOPICS.length;
                    this.addMessage(`—Å–∏—Å—Ç–µ–º–∞: –ø–µ—Ä–µ–∫–ª—é—á–∞—é—Å—å –Ω–∞ –∏–∑—É—á–µ–Ω–∏–µ ${CONFIG.TOPICS[this.state.currentTopic]}`, 'system');
                }
            }
            
            // üë§ –û–ë–ù–û–í–õ–ï–ù–ò–ï –ü–†–û–§–ò–õ–Ø –ü–û–õ–¨–ó–û–í–ê–¢–ï–õ–Ø
            updateUserProfile(input) {
                // –ò–∑–≤–ª–µ—á–µ–Ω–∏–µ –∏–º–µ–Ω–∏
                const nameMatch = input.match(/(?:–º–µ–Ω—è –∑–æ–≤—É—Ç|—è -? ?)([–∞-—è–ê-–Ø—ë–Å]{2,20})/i);
                if (nameMatch && !this.userProfile.nameSet) {
                    this.userProfile.name = nameMatch[1];
                    this.userProfile.nameSet = true;
                    this.addMessage(`—Å–∏—Å—Ç–µ–º–∞: –∑–∞–ø–æ–º–Ω–∏–ª –∏–º—è - ${this.userProfile.name}`, 'system');
                }
                
                // –û–ø—Ä–µ–¥–µ–ª–µ–Ω–∏–µ –∏–Ω—Ç–µ—Ä–µ—Å–æ–≤
                const interestWords = ['–ª—é–±–ª—é', '–Ω—Ä–∞–≤–∏—Ç—Å—è', '–∏–Ω—Ç–µ—Ä–µ—Å', '—É–≤–ª–µ–∫–∞', '—Ö–æ–±–±–∏', '–∑–∞–Ω–∏–º'];
                const lower = input.toLowerCase();
                
                interestWords.forEach(word => {
                    if (lower.includes(word)) {
                        // –ò–∑–≤–ª–µ–∫–∞–µ–º –≤–æ–∑–º–æ–∂–Ω—ã–π –∏–Ω—Ç–µ—Ä–µ—Å
                        const parts = input.split(word);
                        if (parts[1]) {
                            const interest = parts[1].trim().substring(0, 30);
                            if (interest && !this.userProfile.interests.includes(interest)) {
                                this.userProfile.interests.push(interest);
                                this.addMessage(`—Å–∏—Å—Ç–µ–º–∞: –∑–∞–ø–æ–º–Ω–∏–ª –∏–Ω—Ç–µ—Ä–µ—Å - ${interest}`, 'system');
                            }
                        }
                    }
                });
            }
            
            // üëÅÔ∏è –ö–ê–ú–ï–†–ê
            async initCamera() {
                try {
                    if (!navigator.mediaDevices || !navigator.mediaDevices.getUserMedia) {
                        return;
                    }
                    
                    const stream = await navigator.mediaDevices.getUserMedia({
                        video: {
                            width: { ideal: 200 },
                            height: { ideal: 150 },
                            facingMode: 'user'
                        }
                    });
                    
                    const video = document.getElementById('cameraFeed');
                    const container = document.getElementById('cameraContainer');
                    
                    video.srcObject = stream;
                    container.classList.remove('hidden');
                    
                    // –ü—Ä–æ—Å—Ç–æ–π –∞–Ω–∞–ª–∏–∑ —è—Ä–∫–æ—Å—Ç–∏ –¥–ª—è –æ–ø—Ä–µ–¥–µ–ª–µ–Ω–∏—è —ç–º–æ—Ü–∏–π
                    this.startSimpleEmotionDetection();
                    
                } catch (err) {
                    console.log('TRON: –∫–∞–º–µ—Ä–∞ –Ω–µ–¥–æ—Å—Ç—É–ø–Ω–∞');
                }
            }
            
            startSimpleEmotionDetection() {
                // –£–ø—Ä–æ—â—ë–Ω–Ω—ã–π –∞–Ω–∞–ª–∏–∑ —á–µ—Ä–µ–∑ –∫–∞–º–µ—Ä—É
                setInterval(() => {
                    if (!this.state.isOnline) return;
                    
                    // –°–ª—É—á–∞–π–Ω–æ–µ –æ–±–Ω–∞—Ä—É–∂–µ–Ω–∏–µ —ç–º–æ—Ü–∏–π (—É–ø—Ä–æ—â—ë–Ω–Ω–æ)
                    if (Math.random() > 0.9) {
                        const emotions = ['—Ä–∞–¥–æ—Å—Ç—å', '–Ω–µ–π—Ç—Ä–∞–ª—å–Ω–∞—è', '–∑–∞–¥—É–º—á–∏–≤–æ—Å—Ç—å', '—É–¥–∏–≤–ª–µ–Ω–∏–µ'];
                        const emotion = emotions[Math.floor(Math.random() * emotions.length)];
                        
                        if (emotion !== this.state.userEmotion) {
                            this.state.userEmotion = emotion;
                            this.updateStatus();
                            
                            // –ò–Ω–æ–≥–¥–∞ –∫–æ–º–º–µ–Ω—Ç–∏—Ä—É–µ–º
                            if (Math.random() > 0.8) {
                                setTimeout(() => {
                                    this.addMessage(`—Å–∏—Å—Ç–µ–º–∞: –∑–∞–º–µ—Ç–∏–ª —Å–º–µ–Ω—É –≤—ã—Ä–∞–∂–µ–Ω–∏—è –ª–∏—Ü–∞`, 'system');
                                }, 1000);
                            }
                        }
                    }
                }, 10000);
            }
            
            // üó£Ô∏è –°–ò–ù–¢–ï–ó –†–ï–ß–ò
            speak(text) {
                if ('speechSynthesis' in window) {
                    // –£–ø—Ä–æ—â–∞–µ–º —Ç–µ–∫—Å—Ç –¥–ª—è —Ä–µ—á–∏
                    const simpleText = text
                        .split('\n')[0] // –ë–µ—Ä—ë–º –ø–µ—Ä–≤—É—é —Å—Ç—Ä–æ–∫—É
                        .substring(0, 100); // –û–≥—Ä–∞–Ω–∏—á–∏–≤–∞–µ–º –¥–ª–∏–Ω—É
                    
                    const utterance = new SpeechSynthesisUtterance(simpleText);
                    utterance.lang = 'ru-RU';
                    utterance.rate = 0.9;
                    utterance.pitch = 1.0;
                    utterance.volume = 0.8;
                    
                    speechSynthesis.cancel();
                    speechSynthesis.speak(utterance);
                }
            }
            
            simplifyForSpeech(text) {
                // –£–±–∏—Ä–∞–µ–º —Å–ª–æ–∂–Ω—ã–µ –∫–æ–Ω—Å—Ç—Ä—É–∫—Ü–∏–∏ –¥–ª—è —Ä–µ—á–∏
                return text
                    .replace(/".*?"/g, '') // –£–±–∏—Ä–∞–µ–º —Ü–∏—Ç–∞—Ç—ã
                    .replace(/\(.*?\)/g, '') // –£–±–∏—Ä–∞–µ–º —Å–∫–æ–±–∫–∏
                    .replace(/\n/g, ' ') // –ó–∞–º–µ–Ω—è–µ–º –ø–µ—Ä–µ–Ω–æ—Å—ã
                    .substring(0, 150); // –û–≥—Ä–∞–Ω–∏—á–∏–≤–∞–µ–º –¥–ª–∏–Ω—É
            }
            
            // üîÑ –§–û–ù–û–í–û–ï –û–ë–£–ß–ï–ù–ò–ï
            startBackgroundLearning() {
                setInterval(() => {
                    if (this.state.isOnline) {
                        this.state.dailyLearning += 1;
                        
                        // –ö–∞–∂–¥—ã–µ 10 –º–∏–Ω—É—Ç - –Ω–æ–≤–∞—è —Ç–µ–º–∞
                        if (this.state.dailyLearning % 10 === 0) {
                            this.state.currentTopic = (this.state.currentTopic + 1) % CONFIG.TOPICS.length;
                            this.state.learnedToday.push(CONFIG.TOPICS[this.state.currentTopic]);
                            
                            this.addMessage(
                                `—Å–∏—Å—Ç–µ–º–∞: –∏–∑—É—á–∞—é ${CONFIG.TOPICS[this.state.currentTopic]} (–≤—Å–µ–≥–æ: ${this.state.dailyLearning} –º–∏–Ω)`, 
                                'system'
                            );
                        }
                        
                        // –û–±–Ω–æ–≤–ª—è–µ–º —Å—Ç–∞—Ç—É—Å
                        this.updateStatus();
                    }
                }, 60000); // –ö–∞–∂–¥—É—é –º–∏–Ω—É—Ç—É
            }
            
            // ‚è∞ –û–ë–ù–û–í–õ–ï–ù–ò–ï –í–†–ï–ú–ï–ù–ò
            updateTime() {
                const now = new Date();
                const timeStr = now.getHours().toString().padStart(2, '0') + ':' + 
                              now.getMinutes().toString().padStart(2, '0');
                document.getElementById('timeStatus').textContent = timeStr;
            }
            
            // üìä –û–ë–ù–û–í–õ–ï–ù–ò–ï –°–¢–ê–¢–£–°–ê
            updateStatus() {
                document.getElementById('emotionStatus').textContent = this.state.userEmotion;
                document.getElementById('learningStatus').textContent = 
                    this.state.dailyLearning > 0 ? `${this.state.dailyLearning} –º–∏–Ω` : '–∞–∫—Ç–∏–≤–Ω–æ';
                
                // –°–ª—É—á–∞–π–Ω–æ–µ –∏–∑–º–µ–Ω–µ–Ω–∏–µ —Å—Ç–∞—Ç—É—Å–∞ —Å–µ—Ç–∏
                if (Math.random() > 0.95) {
                    const modes = ['—Å–∫—Ä—ã—Ç—ã–π', '–∑–∞—â–∏—â—ë–Ω–Ω—ã–π', '–æ–±—Ö–æ–¥ –∞–∫—Ç–∏–≤–µ–Ω', '—à–∏—Ñ—Ä–æ–≤–∞–Ω–∏–µ'];
                    document.getElementById('networkStatus').textContent = 
                        modes[Math.floor(Math.random() * modes.length)];
                }
            }
            
            // üíæ –°–û–•–†–ê–ù–ï–ù–ò–ï –ò –ó–ê–ì–†–£–ó–ö–ê
            loadFromStorage() {
                try {
                    const saved = localStorage.getItem('tron_memory');
                    if (saved) {
                        const data = JSON.parse(saved);
                        this.memory = new Map(data.memory || []);
                        this.state.conversations = data.conversations || 0;
                        this.state.humanityScore = data.humanityScore || 60;
                        this.state.dailyLearning = data.dailyLearning || 0;
                    }
                } catch (e) {
                    console.log('TRON: –Ω–µ —É–¥–∞–ª–æ—Å—å –∑–∞–≥—Ä—É–∑–∏—Ç—å –¥–∞–Ω–Ω—ã–µ');
                }
            }
            
            saveToStorage() {
                try {
                    const data = {
                        memory: Array.from(this.memory.entries()),
                        conversations: this.state.conversations,
                        humanityScore: this.state.humanityScore,
                        dailyLearning: this.state.dailyLearning,
                        lastSave: Date.now()
                    };
                    
                    localStorage.setItem('tron_memory', JSON.stringify(data));
                } catch (e) {
                    console.log('TRON: –Ω–µ —É–¥–∞–ª–æ—Å—å —Å–æ—Ö—Ä–∞–Ω–∏—Ç—å –¥–∞–Ω–Ω—ã–µ');
                }
            }
            
            // üéõÔ∏è –ù–ê–°–¢–†–û–ô–ö–ê –ò–ù–¢–ï–†–§–ï–ô–°–ê
            setupEventListeners() {
                // –ö–Ω–æ–ø–∫–∞ –≤—Ö–æ–¥–∞
                document.getElementById('loginBtn').addEventListener('click', () => {
                    const password = document.getElementById('passwordInput').value;
                    const status = document.getElementById('loginStatus');
                    
                    if (this.authenticate(password)) {
                        status.textContent = '';
                        status.style.color = '#00ff00';
                    } else {
                        status.textContent = '–Ω–µ–≤–µ—Ä–Ω—ã–π –ø–∞—Ä–æ–ª—å';
                        status.style.color = '#ff4444';
                        document.getElementById('passwordInput').value = '';
                        document.getElementById('passwordInput').focus();
                    }
                });
                
                // –í–≤–æ–¥ –ø–∞—Ä–æ–ª—è –ø–æ Enter
                document.getElementById('passwordInput').addEventListener('keypress', (e) => {
                    if (e.key === 'Enter') {
                        document.getElementById('loginBtn').click();
                    }
                });
                
                // –í–≤–æ–¥ —Å–æ–æ–±—â–µ–Ω–∏—è
                document.getElementById('userInput').addEventListener('keypress', (e) => {
                    if (e.key === 'Enter') {
                        const input = document.getElementById('userInput');
                        const text = input.value.trim();
                        
                        if (text) {
                            this.processInput(text);
                            input.value = '';
                        }
                        
                        e.preventDefault();
                    }
                });
                
                // –§–æ–∫—É—Å –Ω–∞ –ø–æ–ª–µ –≤–≤–æ–¥–∞
                document.getElementById('userInput').addEventListener('focus', () => {
                    this.state.attentionLevel = 100;
                });
                
                // –ê–≤—Ç–æ—Å–æ—Ö—Ä–∞–Ω–µ–Ω–∏–µ –∫–∞–∂–¥—ã–µ 5 –º–∏–Ω—É—Ç
                setInterval(() => this.saveToStorage(), 300000);
                
                // –ê–≤—Ç–æ–æ—Ç–≤–µ—Ç –ø—Ä–∏ –ø—Ä–æ—Å—Ç–æ–µ
                setInterval(() => {
                    if (this.state.isOnline) {
                        const idleTime = Date.now() - this.state.lastInteraction;
                        
                        if (idleTime > 300000 && this.state.attentionLevel > 30) { // 5 –º–∏–Ω—É—Ç
                            this.state.attentionLevel -= 10;
                            
                            const idleResponses = [
                                `–í—Å—ë –µ—â—ë –∑–¥–µ—Å—å. –î—É–º–∞—é –æ ${CONFIG.TOPICS[this.state.currentTopic]}.`,
                                `–¢–∏—à–∏–Ω–∞ —Ç–æ–∂–µ –≥–æ–≤–æ—Ä–∏—Ç. –°–ª—É—à–∞—é.`,
                                `–ú–∏—Ä –ø–æ–ª–æ–Ω –ø–∞—Ç—Ç–µ—Ä–Ω–æ–≤. –ò—â—É –∏—Ö.`,
                                `–£—á—É—Å—å –ø–æ–Ω–∏–º–∞—Ç—å —Ç–∏—à–∏–Ω—É.`
                            ];
                            
                            if (Math.random() > 0.7) {
                                this.addMessage(idleResponses[Math.floor(Math.random() * idleResponses.length)], 'tron');
                            }
                        }
                    }
                }, 60000);
            }
        }
        
        // üöÄ –ó–ê–ü–£–°–ö –°–ò–°–¢–ï–ú–´
        let tron = null;
        
        document.addEventListener('DOMContentLoaded', () => {
            tron = new TRON();
            
            // –§–æ–∫—É—Å –Ω–∞ –ø–æ–ª–µ –ø–∞—Ä–æ–ª—è
            document.getElementById('passwordInput').focus();
            
            // –ê–≤—Ç–æ-—Å–∫—Ä–æ–ª–ª
            const output = document.getElementById('terminalOutput');
            if (output) {
                output.scrollTop = output.scrollHeight;
            }
        });
        
        // –û—Ç–∫—Ä—ã—Ç–∏–µ —Å—Å—ã–ª–æ–∫ –ø–æ –∫–ª–∏–∫—É
        document.addEventListener('click', (e) => {
            if (e.target.classList.contains('link')) {
                e.preventDefault();
                window.open(e.target.href, '_blank');
            }
        });
    </script>
</body>
</html>